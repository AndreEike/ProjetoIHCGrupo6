@using IHC.Web.Models

@{
    ViewBag.Title = "Cadastro";
}

@{
    List<TipoContratacao> tipoContratacao = ViewBag.TipoContratacao == null ? new List<TipoContratacao>() : ViewBag.TipoCOntratacao;

}

@{
    if (TempData["CadastroColaborador"] != null)
    {
        <br />
        <div id="divmsg" onclick="divhidden()" style="color:green">
            <b>Colaborador cadastrador com sucesso!<span style="float:right" onmouseover="this.style.cursor='pointer'">X</span></b>
        </div>
    }
    if (TempData["CadastroColaborador_"] != null)
    {
        <br />
        <div id="divmsg" onclick="divhidden()" style="color:red">
            <b>Não foi possivel cadastrar colaborador!<span style="float:right" onmouseover="this.style.cursor='pointer'">X</span></b>
        </div>
    }
}

<h2>Cadastro de Colaborador</h2>
<br />
@using (Html.BeginForm("Cadastro", "Colaborador", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Nome</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="nome" required autocomplete="off">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">CPF</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="cpf" required autocomplete="off">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Telefone</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="telefone" required autocomplete="off" maxlength="11">
        </div>
    </div>


    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="email" required autocomplete="off">
        </div>
    </div>




    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Tipo Contratação</label>
        <div class="col-sm-10">

            <select class="form-control" name="idtipocontratacao" required autocomplete="off">
                <option selected></option>
                @foreach (TipoContratacao tc in tipoContratacao)
                {
                    <option value="@tc.Id">@tc.Descricao</option>
                }
            </select>
        </div>
    </div>





    <div class="form-group row">
        <div>
            @*<a href="/Login/LoginEmpresa" class="btn btn-primary" style="background-color:#222222; border:1px solid white">Voltar</a>*@
            <button type="submit" class="btn btn-primary">Cadastrar</button>

        </div>

    </div>



    <div>
    </div>


}
